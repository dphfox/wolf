{
	"name": "wf-vscode",
	"displayName": "Wolf for VSCode",
	"description": "Use the Wolf Reference Implementation with VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.104.0"
	},
	"categories": [
		"Programming Languages"
	],
	"main": "./out/main.js",
	"contributes": {
		"configuration": {
			"title": "Wolf",
			"properties": {
				"wolf.exec.path": {
					"type": "string",
					"scope": "resource",
					"default": "",
					"description": "Path to the Wolf executable. Leave empty to look for 'wf' in your PATH."
				},
				"wolf.exec.safetyTimeout": {
					"type": "integer",
					"scope": "resource",
					"default": 1000,
					"description": "After this time in ms, the executable will be killed for taking too long."
				}
			}
		},
		"colors": [
			{
				"id": "wolf.debug.1",
				"description": "Wolf debug colour 1",
