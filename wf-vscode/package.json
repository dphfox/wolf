		"languages": [
			{
				"id": "wolf",
				"aliases": [
					"Wolf",
					"wolf"
				],
				"extensions": [
					".wf"
				],
				"mimetypes": [
					"text/wolf"
				],
				"icon": {"light": "./images/wolf-light.svg", "dark": "./images/wolf-dark.svg"},
				"configuration": "./language-configuration.json"
			},
			{
				"id": "wolf-markdown",
				"aliases": []
			}
		],
		"grammars": [
			{
				"language": "wolf",
				"scopeName": "source.wolf",
				"path": "./syntaxes/wolf.tmLanguage.json"
			},
			{
				"language": "wolf-markdown",
				"scopeName": "markdown.wolf.codeblock",
				"path": "./syntaxes/wolf-markdown.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.wolf": "wolf"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.86.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3",
		"@vscode/test-cli": "^0.0.6",
		"@vscode/test-electron": "^2.3.9"
	}
}