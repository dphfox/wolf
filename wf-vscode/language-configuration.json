{
    "comments": {
        "lineComment": {
			"comment": "--",
		},
        "blockComment": [ "---", "---" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "---", "close": "---", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "`", "close": "`", "notIn": ["string", "comment"] }
    ],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
		["`", "`"]
	],
	"colorizedBracketPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoCloseBefore": ">}])` \n\t,;:=",
	"folding": {
		"markers": {
			"start": "^\\s*---\\s*$",
			"end": "^\\s*---\\s*$"
		}
	}
}